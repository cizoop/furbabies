<% layout("/layouts/boilerplate") -%>
<script>
  const mapToken="<%=process.env.MAP_TOKEN%>";
  const listing=<%- JSON.stringify(listing)%>;
</script>
<div class="row mt-3">
  <!-- Listing Header and Image -->
  <div class="col-6 offset-3">
    <h1><%= listing.name %></h1>
    <div class="card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img listing-card"
        alt="listing_img"
      />
    </div>
  </div>

  <!-- Listing Details -->
  <div class="col-8 offset-2 mt-3">
    <div class="card-body">
      <p class="card-text">
        <i>Owned by - <%= listing.owner.username %></i>
      </p>
      <p class="card-text"><%= listing.desc %></p>
      <p class="card-text"><%= listing.age %></p>
      <p class="card-text"><%= listing.gender %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.category %></p>
    </div>
  </div>

  <!-- Edit & Delete Buttons -->
  <% if(currUser && currUser._id.equals(listing.owner._id)){%>

  <div class="btns mb-3">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-2 offset-2"
      >Edit me!</a
    >
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
      <button class="btn btn-secondary offset-4">Delete</button>
    </form>
  </div>

  <%}%>
  <form action="/listings/adoptme" method="get">
      <button class="btn btn-secondary offset-4">Adopt me</button>
    </form>
  <hr />

  <!-- Review Form -->
  <div class="col-8 offset-3 mb-3 mt-3">
    <% if(currUser) {%>
      <h4>Leave a volunteer review!!</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div> -->
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-growRotate">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

    </div>
      <div>
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some volunteer review!</div>
      </div>

      <button class="btn btn-dark mb-3 mt-3">Submit</button>
    </form>
    <hr />
    <%}%>

    <%if(listing.reviews.length>0){ %>
      <!-- All Reviews -->
      <div class="row">
        <p><b>All Reviews</b></p>
      <% for (review of listing.reviews) { %>
      <div class="card col-5 ms-1 mb-3">
        <div class="card-body">
          <div class="card-title">@<%= review.author.username %></div>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
          <form
            class="mb-2 mt-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
  <%}%>
</div>
  <div class="col-8 offset-3 mb-3">
    <h3>Where u'll find me</h3>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>